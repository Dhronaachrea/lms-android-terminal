    <LinearLayout
        android:id="@+id/quick_pick_number_layout_upper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.60"
        android:background="@color/common_color_qp_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/quick_pick_number_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="right|end">

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Number\nPicked"
                    android:textColor="@color/number_picked_quick"
                    android:textSize="@dimen/_8sdp"
                    app:typeface_common="roboto_light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.75"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quick_pick_shape"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/pick_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/pick_down"/>

                    <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                        android:id="@+id/number_picked"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_horizontal"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/number_picked_quick"
                        android:textSize="@dimen/_12sdp"
                        app:typeface_common="roboto_light"/>

                    <ImageView
                        android:id="@+id/pick_up"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/pick_up"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
        android:id="@+id/btn_quick_pick"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:background="@drawable/game_selector_normal"
        android:gravity="center"
        android:text="QUICK PICK"
        android:textColor="@color/quick_color"
        android:textSize="@dimen/_7sdp"
        app:typeface_common="roboto_light"/>

</LinearLayout>