                                                                   android:layout_marginRight="1dp"
                                                                   android:layout_weight="1"
                                                                   android:background="#000FF0"
                                                                   android:gravity="center"
                                                                   android:text="Direct5"
                                                                   android:textColor="#FFF"
                                                                   android:textSize="@dimen/_5sdp"
