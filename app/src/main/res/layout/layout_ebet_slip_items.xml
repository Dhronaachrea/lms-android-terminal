<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white">


            <TextView
                android:id="@+id/tablet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="A1"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/draws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tablet_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="DRAW"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/gamecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/draws"
                android:layout_centerHorizontal="true"
                android:text="SUPER KENO"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gamecode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Game"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/gametype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game"
                android:layout_centerHorizontal="true"
                android:text="winlot 12:20"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/qp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gametype"
                android:layout_centerHorizontal="true"
                android:text="(Manual)"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/number_ebet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="numbers"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_6sdp" />

            <ListView
                android:id="@+id/all_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/number_ebet"
                android:divider="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/all_number"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/rectangle_buy_bg"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gametype1"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="$6000"
                        android:textAllCaps="true"
                        android:textColor="@color/ebet_tablet_color"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buyNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="buy "
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/buyNowSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="now"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/delete_layout"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:background="@drawable/rectangle_delete_bg">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/trashicon" />
            </LinearLayout>

            <TextView
                android:id="@+id/noDataAvailable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center"
                android:text="No Data Available!"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tablet_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="A1"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/draws1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tablet_name1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="DRAW"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/gamecode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/draws1"
                android:layout_centerHorizontal="true"
                android:text="SUPER KENO"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/game1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gamecode1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Game"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/gametype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game1"
                android:layout_centerHorizontal="true"
                android:text="winlot 12:20"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/qp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gametype1"
                android:layout_centerHorizontal="true"
                android:text="(manual)"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qp1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="numbers"
                android:textAllCaps="true"
                android:textColor="@color/ebet_tablet_color1"
                android:textSize="@dimen/_6sdp" />

            <ListView
                android:id="@+id/all_number1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/number1"
                android:divider="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/all_number1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/rectangle_buy_bg"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gametype1"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="$6000"
                        android:textAllCaps="true"
                        android:textColor="@color/ebet_tablet_color"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buy1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buyNow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="buy "
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/buyNowSub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="now"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/delete_layout1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/rectangle_delete_bg">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/trashicon" />
            </LinearLayout>

            <TextView
                android:id="@+id/noDataAvailable1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center"
                android:text="No Data Available!"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/display"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/device_bg">

        <TextView
            android:id="@+id/deviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hellow"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_6sdp" />
    </LinearLayout>

</RelativeLayout>
