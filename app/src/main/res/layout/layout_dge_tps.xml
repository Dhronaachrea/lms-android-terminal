<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <include
        android:id="@+id/main_header"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/game_selection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/common_color_draw_bg_ebet"
            android:gravity="center">

            <ImageView
                android:id="@+id/select_game"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/draw_txt"/>

            <!--
                        <com.tablet.stpl.comman.utils.VerticalTextView
                            android:id="@+id/select_game"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|center_vertical"
                            android:text="SELECT GAME"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_5sdp" />-->
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6">

                <LinearLayout
                    android:id="@+id/lucky_numbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_game_selector"
                    android:orientation="vertical"
                    android:weightSum="10">


                    <ImageView
                        android:id="@+id/lucky_numbers_img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5"
                        android:src="@mipmap/lucky_5_90" />

                    <TextView
                        android:id="@+id/game_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="right|bottom"
                        android:paddingRight="12dp"
                        android:text="Lucky Numbers"
                        android:textColor="#E1E3E5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mini_keno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_game_selector"
                    android:orientation="vertical"
                    android:weightSum="10">


                    <ImageView
                        android:id="@+id/mini_keno_img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5"
                        android:src="@mipmap/mini_keno" />

                    <TextView
                        android:id="@+id/mini_keno_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="right|bottom"
                        android:paddingRight="12dp"
                        android:text="Mini Keno"
                        android:textColor="#E1E3E5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mini_roulette"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_game_selector"
                    android:orientation="vertical"
                    android:weightSum="10">


                    <ImageView
                        android:id="@+id/mini_roulette_img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5"
                        android:src="@mipmap/mini_roulette" />

                    <TextView
                        android:id="@+id/mini_roulette_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="right|bottom"
                        android:paddingRight="12dp"
                        android:text="Mini Roulette"
                        android:textColor="#E1E3E5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/super_keno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_game_selector"
                    android:orientation="vertical"
                    android:weightSum="10">


                    <ImageView
                        android:id="@+id/super_keno_img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5"
                        android:src="@mipmap/super_keno" />

                    <TextView
                        android:id="@+id/super_keno_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="right|bottom"
                        android:paddingRight="12dp"
                        android:text="Super Keno"
                        android:textColor="#E1E3E5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/one_to_twelve"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_game_selector"
                    android:orientation="vertical"
                    android:weightSum="10">


                    <ImageView
                        android:id="@+id/one_to_twelve_img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5"
                        android:src="@mipmap/fortune" />

                    <TextView
                        android:id="@+id/one_to_twelve_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="right|bottom"
                        android:paddingRight="12dp"
                        android:text="One To Twelve"
                        android:textColor="#E1E3E5" />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/bet_slip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <include
                android:id="@+id/more_col_id"
                layout="@layout/more_col"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <include
            android:id="@+id/below_sub_header"
            layout="@layout/layout_below_sub_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1.5" />

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="7.5"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>


    <include
        android:id="@+id/bottom_layout"
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>
