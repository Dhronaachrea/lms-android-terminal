<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/gray_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <TextView
            android:id="@+id/txt_venue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="African League, Madagascar"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/_5sdp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="14:34"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/_5sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkboxes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/txt_time"
        android:layout_weight="1.2">


        <TextView
            android:id="@+id/cb_home_extra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_left_round"
            android:button="@drawable/rb_left_round"
            android:gravity="center"
            android:text="+H"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/first_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/cb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_normal"
            android:button="@drawable/rb_normal"
            android:gravity="center"
            android:text="H"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/cb_draw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_normal"
            android:button="@drawable/rb_normal"
            android:gravity="center"
            android:text="D"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/cb_away"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_normal"
            android:button="@drawable/rb_normal"
            android:gravity="center"
            android:text="A"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/second_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/cb_away_extra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_right_round"
            android:button="@drawable/rb_right_round"
            android:gravity="center"
            android:text="+A"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.9"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="African League\nMadagascar"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_green"
            android:gravity="center"
            android:padding="1dp"
            android:text="VS"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_5sdp" />

        <TextView
            android:id="@+id/txt_away"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="African League\nMadagascar"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/_5sdp" />
    </LinearLayout>

</LinearLayout>