<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/header"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_color_header"
              android:orientation="horizontal"
              android:weightSum="10">

    <ImageView
        android:id="@+id/header_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:src="@mipmap/skilrock_big" />

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sport_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/sport" />

        <ImageView
            android:id="@+id/draw_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/draw" />

        <ImageView
            android:id="@+id/ticket_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/ticket"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/scratch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/scratch"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ola_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/ola"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ebet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:src="@mipmap/ebet_icon" />

        <ImageView
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/tab"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2.5"
        android:background="@color/common_color_bg_username"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="3"
            android:padding="@dimen/_2sdp"
            android:src="@mipmap/user" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="name"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/user_balance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="user balance"
                android:layout_marginBottom="1dp"
                android:textColor="#FFFF00" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>