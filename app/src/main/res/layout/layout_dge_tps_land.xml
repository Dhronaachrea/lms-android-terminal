<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <include
        android:id="@+id/main_header"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2" />


    <LinearLayout
        android:id="@+id/sub_main_first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/game_selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/common_color_draw_bg_ebet"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/select_game"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:rotation="0"
                        android:text="SELECT GAME"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_4sdp" />

                </LinearLayout>

                <ScrollView
                    android:id="@+id/horizontalScroll"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.5">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lucky_numbers"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@drawable/top_game_selector"
                            android:orientation="vertical"
                            android:weightSum="10">


                            <ImageView
                                android:id="@+id/lucky_numbers_img"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7"
                                android:src="@mipmap/lucky_5_90" />

                            <TextView
                                android:id="@+id/game_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="right|bottom"
                                android:paddingRight="12dp"
                                android:text="Lucky Numbers"
                                android:textColor="#E1E3E5"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mini_keno"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/top_game_selector"
                            android:orientation="vertical"
                            android:weightSum="10">


                            <ImageView
                                android:id="@+id/mini_keno_img"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7"
                                android:src="@mipmap/mini_keno" />

                            <TextView
                                android:id="@+id/mini_keno_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="right|bottom"
                                android:paddingRight="12dp"
                                android:text="Mini Keno"
                                android:textColor="#E1E3E5"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mini_roulette"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/top_game_selector"
                            android:orientation="vertical"
                            android:weightSum="10">


                            <ImageView
                                android:id="@+id/mini_roulette_img"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7"
                                android:src="@mipmap/mini_roulette" />

                            <TextView
                                android:id="@+id/mini_roulette_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="right|bottom"
                                android:paddingRight="12dp"
                                android:text="Mini Roulette"
                                android:textColor="#E1E3E5"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/super_keno"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/top_game_selector"
                            android:orientation="vertical"
                            android:weightSum="10">


                            <ImageView
                                android:id="@+id/super_keno_img"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7"
                                android:src="@mipmap/super_keno" />

                            <TextView
                                android:id="@+id/super_keno_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="right|bottom"
                                android:paddingRight="12dp"
                                android:text="Super Keno"
                                android:textColor="#E1E3E5"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/one_to_twelve"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/top_game_selector"
                            android:orientation="vertical"
                            android:weightSum="10">


                            <ImageView
                                android:id="@+id/one_to_twelve_img"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7"
                                android:src="@mipmap/fortune" />

                            <TextView
                                android:id="@+id/one_to_twelve_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="right|bottom"
                                android:paddingRight="12dp"
                                android:text="One To Twelve"
                                android:textColor="#E1E3E5"
                                android:visibility="gone" />

                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>

                <LinearLayout
                    android:id="@+id/bet_slip"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/more_col_id"
                        layout="@layout/more_col_land"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <include
                        android:id="@+id/common_winning_claim_btn"
                        layout="@layout/common_winning_claim"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <include
                        android:id="@+id/common_bet_slip_btn"
                        layout="@layout/common_bet_slip"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <include
                    android:id="@+id/below_sub_header"
                    layout="@layout/layout_below_sub_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1.5" />

                <LinearLayout
                    android:id="@+id/main_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="7"
                    android:orientation="vertical">

                </LinearLayout>

                <include
                    android:id="@+id/bottom_layout"
                    layout="@layout/layout_footer_land"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
