<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <!--<FrameLayout-->
        <!--android:id="@+id/common_draws_layout"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin=".5dp"-->
        <!--android:layout_weight="0.4"-->
        <!--android:clickable="true"-->
        <!--android:visibility="gone" />-->
        <LinearLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="0.4"
            android:clickable="true"
            android:id="@+id/draws_mini_roulette"
            android:layout_height="match_parent">

            <include
                layout="@layout/common_draw_select_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_weight="0.4"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_selected_numbers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin=".5dp"
            android:visibility="visible"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/number_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/common_bg_selected_number_color"
                android:gravity="center"
                android:orientation="vertical">

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/selected_numbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="05"
                    android:textColor="@color/common_selected_number_color"
                    android:textSize="@dimen/_13sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SELECTED"
                    android:textColor="@color/common_selected_number_txt_color"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_medium" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="NUMBERS"
                    android:textColor="@color/common_selected_number_txt_color"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_medium" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/middle_line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/common_bg_selected_number_color">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/common_selected_number_txt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/common_bg_selected_number_color"
                android:gravity="center"
                android:orientation="vertical">

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/no_of_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="05"
                    android:textColor="@color/common_selected_number_color"
                    android:textSize="@dimen/_13sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="NUMBER"
                    android:textColor="@color/common_selected_number_txt_color"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_medium" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="OF LINES"
                    android:textColor="@color/common_selected_number_txt_color"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_medium" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bet_amount_lay1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/first_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/second_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/third_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/four_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/five_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bet_amount_lay2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:textSize="@dimen/_7sdp">

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/six_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/seven_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/eight_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/nine_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />

                <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                    android:id="@+id/bet_other"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bet_amount_selector_normal_ebet"
                    android:gravity="center"
                    android:text="$ 10"
                    android:textColor="@color/common_color_bet_amount"
                    android:textSize="@dimen/_10sdp"
                    app:typeface_common="roboto_regular" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <include
            android:id="@+id/common_winning_claim_btn"
            layout="@layout/common_winning_claim_tps390"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin=".5dp"
            android:layout_weight="0.25" />

        <include
            android:id="@+id/common_bet_slip_btn"
            layout="@layout/common_bet_slip_tps390"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin=".5dp"
            android:layout_weight="0.25" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_refresh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin=".5dp"
                android:layout_weight="0.1"
                android:background="@color/common_color_bg_bet_amount"
                android:padding="@dimen/_3sdp"
                android:src="@mipmap/btn_refresh" />

            <ImageView
                android:id="@+id/list_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin=".5dp"
                android:visibility="gone"
                android:layout_weight="0.5"
                android:background="@color/common_color_bg_bet_amount"
                android:padding="@dimen/_3sdp"
                android:src="@mipmap/list_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin=".5dp"
            android:layout_weight="0.3"
            android:background="@drawable/buy_selector"
            android:clickable="true"
            android:orientation="vertical">

            <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                android:id="@+id/buy_amt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="$ 100000.22"
                android:textColor="@color/common_color_buy_amt"
                android:textSize="@dimen/_12sdp"
                app:typeface_common="roboto_medium" />

            <demo.stpl.com.tpsmergedbuild.baseClass.RobotoCommonTextView
                android:id="@+id/buy_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#11000000"
                android:gravity="center"
                android:text="BUY NOW"
                android:textColor="@color/common_color_buy_txt"
                android:textSize="@dimen/_14sdp"
                app:typeface_common="roboto_medium" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>